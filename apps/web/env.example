# WALMCO Güvenli Görsel Sistemi - Environment Değişkenleri

# Görsel güvenlik ayarları
IMAGE_SECRET_KEY=walmco-secure-images-key-2024-CHANGE-THIS-IN-PRODUCTION
IMAGE_BASE_URL=https://walmco-images.example.com
IMAGE_TOKEN_EXPIRY=60

# CDN ayarları (opsiyonel)
CDN_BASE_URL=https://cdn.walmco.com
CDN_SECURE_TOKEN=your-cdn-secure-token

# AWS S3 ayarları (eğer AWS kullanıyorsanız)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=walmco-secure-images
AWS_CLOUDFRONT_DISTRIBUTION_ID=your-cloudfront-id

# Database (mevcut ayarlarınız)
DATABASE_URL=your-database-url

# Auth ayarları (mevcut ayarlarınız)
AUTH_SECRET=your-auth-secret
NEXTAUTH_URL=https://walmco.com

# Rate limiting ayarları
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_IMAGE_REQUESTS=30

# Güvenlik ayarları
ALLOWED_DOMAINS=localhost,127.0.0.1,walmco.com,www.walmco.com
HOTLINK_PROTECTION_ENABLED=true
WATERMARK_ENABLED=true
BLUR_ON_DEVTOOLS=true

# Log ayarları
LOG_LEVEL=info
LOG_SECURE_REQUESTS=true

# Production ayarları
NODE_ENV=production
PORT=4000
